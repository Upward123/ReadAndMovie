/* pages/movies/detailMovie/detailMovie.wxss */
@import "../star-template/star-template.wxss";

page{
  width: 100%;
  height: 100%;
}

#wrap{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.head-img{
  width: 750rpx;
  height: 320rpx;
  /* 使图片有模糊效果 */
  -webkit-filter: blur(20px);
}

.side-img{
  width: 180rpx;
  height: 240rpx;
  position: absolute;
  right: 30rpx;
  top: 190rpx;
}

.img-title{
  color: white;
  font-size: 25px;
  position: absolute;
  top: 50rpx;
  left: 40rpx;
}

.img-countryAndTime{
  position: absolute;
  top: 150rpx;
  left: 40rpx;
}

.img-countryAndTime text{
  color: white;
  font-size: 35rpx;
  margin-right: 10rpx;
}

.img-view{
  position: absolute;
  top: 250rpx;
  left: 40rpx;
}

.img-view text{
  font-size: 25rpx;
}

.img-num{
  color: red;
  margin-right: 20rpx;
}

.img-txt{
  color: #999;
  margin-right: 30rpx;
}

.first-down{
  margin-top: 60rpx;
}

.first-title{
  color: #333;
  margin-left: 40rpx;
  font-size: 30rpx;
}

.first-four{
  margin-top: 50rpx;
}

.first-c{
  display: flex;
  flex-direction: row;
  margin-left: 40rpx;
}

.text-title{
  width: 80rpx;
  height: 50rpx;
  line-height: 50rpx;
  color: #999999;
  margin-right: 30rpx;
}

.first-star{
  width: 300rpx;
}

.text-content{
  width: 600rpx;
  height: 50rpx;
  line-height: 50rpx;
  overflow: hidden;
}

.hr{
  width: 100%;
  border-bottom: solid 1px #999;
  margin-top: 50rpx;
}

.second{
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.second text{
  display: block;
}

.summary-title{
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  font-size: 30rpx;
  color: #999999;
}

.summary{
  margin-top: 40rpx;
  margin-right: 60rpx;
}

.third{
  margin-top: 50rpx;
  margin-left: 40rpx;
}

.third-actors{
  width: 750rpx;
  margin-top: 40rpx;
  height: 400rpx;
  white-space: nowrap;  
}

.third-actor{
  width: 200rpx;
  height: 400rpx;
  margin-right: 40rpx;
  display: inline-block;
}

.third-actor text{
  display: block;
  text-align: center;
  width: 200rpx;
  overflow: hidden;
}

.third-actor image{
  width: 200rpx;
  height: 250rpx;
}


